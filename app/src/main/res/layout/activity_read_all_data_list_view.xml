<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sirinrat.myapplication.ReadAllDataListView"
    android:background="@drawable/bg33">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All List"
        android:id="@+id/textView10"
        android:textSize="@dimen/h1"
        android:layout_centerHorizontal="true"
        android:textColor="#040101"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickBackToDo"
        android:text="Back"
        android:id="@+id/button4"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:background="#d0cec0c7"
        android:layout_alignParentBottom="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_below="@+id/textView10"
        android:layout_above="@+id/button4"
        android:layout_margin="15dp"
        android:background="#96ffffff" />
</RelativeLayout>